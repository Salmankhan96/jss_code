    <record id="report_requisition_slip_pdf" model="ir.actions.report">
        <field name="name">Requisition Slip PDF</field>
        <field name="model">requisition.slip</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">jss_code.report_requisition_slip_template</field>
        <field name="report_file">jss_code.report_requisition_slip_template</field>
        <field name="print_report_name">'Requisition Slip - %s.pdf' % (object.workorder_id.operator_work_order_no or '')</field>
        <field name="paperformat_id" ref="jss_code.paperformat_workshop_register_landscape"/>
    </record>
